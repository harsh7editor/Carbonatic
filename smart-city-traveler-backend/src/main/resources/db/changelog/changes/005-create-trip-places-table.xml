<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="005-create-trip-places-table" author="smartcity">
        <createTable tableName="trip_places">
            <column name="trip_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_trip_places_trip" referencedTableName="trips" referencedColumnNames="id"/>
            </column>
            <column name="place_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_trip_places_place" referencedTableName="places" referencedColumnNames="id"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="trip_places" columnNames="trip_id, place_id"/>
    </changeSet>

</databaseChangeLog>
